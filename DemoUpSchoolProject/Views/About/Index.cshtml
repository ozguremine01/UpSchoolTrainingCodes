@using DemoUpSchoolProject.Models.Entites
@model List<TblAbout>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h2>Index</h2>

<table class="table table-striped">

    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        
<tr>
    @*<td>@item.ServiceID</td>*@
    <td>@item.AboutID</td>
    <td>@item.NameSurname</td>
    <td>@item.Title</td>
    <td><a href="/Services/DeleteService/@item.AboutID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Services/UpdateService/@item.AboutID" class="btn btn-success">Güncelle</a></td>

</tr>
    }
</table>

<a href="/About/AddAbout" class="btn btn-primary">Yeni Hakkımda Yazısı</a>